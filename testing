######################################################################
This is to install all of the catkin packages and set everything up #
######################################################################
s will set up the scripts and stuff
cp -R -v  ~/autobots/autobots/bin ~/
cd ~/bin
chmod 755 indigo
chmod 755 setPort
chmod 755 motorPort
chmod 755 gpsPort
chmod 755 wtfWiFi
export PATH=$PATH:~/bin
source ~/.bashrc
cd

#Setup the Catkin stuff
mkdir -p -v ~/catkin_ws/src
cd ~/catkin_ws/src
catkin_init_workspace
cd ../
catkin_make


#set up the catkin ws and make it
cp -R -v ~/autobots/autobots/catkin_ws/src ~/autobots/
rm -r ~/autobots/src/traxxas_node
rm -r ~/autobots/src/outdoor_navigation
cp -R -v ~/autobots/autobots/catkin_ws/src/traxxas_node ~/catkin_ws/src
source indigo
cd ~/autobbots/src
cp -R -v ~/autobots/src/* ~/catkin_ws/src
source indigo
cp -R -v ~/autobots/autobots/catkin_ws/src/outdoor_navigation ~/catkin_ws/src
source indigo
cd ~/autobots
rm -r src
cd
#go through catkin and make all ofthe .py files executable
cd ~/catkin_ws/src
for f in $(find . -name "*.py"); do
        chmod +x $f
done

sudo usermod -a -G dialout blue
chown -R blue:blue ~/.ros/
chown -R blue:blue ~/catkin_ws/

